\defbeamertemplate*{title page}{RPTU}[1][]{ 
   \vskip3cm%
    \begin{beamercolorbox}[wd=10cm,sep=0pt,#1]{title page header}
      \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
    \vskip0.25cm%
    \textcolor{rptu2}{\rule{1cm}{1pt}}%
    \vskip0.25cm%
     \begin{beamercolorbox}[wd=10cm,#1]{author}
      \usebeamerfont{subtitle}\insertsubtitle%
    \end{beamercolorbox}
    \vskip2cm%
    \begin{beamercolorbox}[wd=7cm,#1]{author}
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
    \ifx \insertinstitute\@empty%
    \else
    \begin{beamercolorbox}[wd=7cm,#1]{institute}
      \usebeamerfont{institute}\insertinstitute%
    \end{beamercolorbox}
    \fi
     \vskip0.3cm%
    \begin{beamercolorbox}[wd=7cm,#1]{date}
      \usebeamerfont{date}\insertdate%
    \end{beamercolorbox}
  \vfill
}

