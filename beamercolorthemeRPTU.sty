\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%                     Color Settings                     %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% https://www.cpt.univ-mrs.fr/~masson/latex/Beamer-appearance-cheat-sheet.pdf
 
\setbeamercolor*{structure}{fg=rptuschwarz}
\setbeamercolor*{normal text}{fg = rptuschwarz, bg=rptuweiss}

% sets (sub)title, (sub)frametitle if not otherwise specified
\setbeamercolor*{titlelike}{parent=palette secondary} 

% Color palettes
\setbeamercolor*{palette primary}{fg=rptuweiss, bg=rptu1}
\setbeamercolor*{palette secondary}{fg=rptu2, bg=rptuweiss}
\setbeamercolor*{palette tertiary}{fg=rptu1, bg=rptuweiss}
\setbeamercolor*{palette quaternary}{fg= rptuweiss!20!rptu1, bg=rptuweiss}

% Global Definitions including color palettes
\setbeamercolor{structure}{fg=rptu1}



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%                    Specific Choices                    %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Title page, part, section, subsection

\setbeamercolor*{title}{parent=palette primary}
\setbeamercolor*{title page header}{parent=palette primary}
\setbeamercolor*{section title}{parent=palette primary}
\setbeamercolor{section in head/foot}{parent=palette quaternary} % e.g. in navigation bar
\setbeamercolor{subsection in head/foot}{parent=palette quaternary}
\setbeamercolor{author}{fg=rptuweiss}
\setbeamercolor{date}{fg=rptuweiss}
\setbeamercolor{institute}{fg = rptuweiss}

% - Standard block
\setbeamercolor{block title}{parent=palette primary}
\setbeamercolor{block body}{bg = rptuweiss!60!rptu2}

% - Alert block
\setbeamercolor{block title alerted}{fg = rptuweiss, bg = rpturot}
\setbeamercolor{block body alerted}{bg = rptuweiss!60!rptuorange}

% - Example block
\setbeamercolor{block title example}{fg = rptuweiss, bg = rptudunkelgruen}
\setbeamercolor{block body example}{bg = rptuweiss!60!rptuhellgruen}

% - Footnotes
\setbeamercolor{footnote}{parent = palette quaternary} 
\setbeamercolor{footnote mark}{parent = palette quaternary}

% - Captions
\setbeamercolor{caption}{fg = rptu1}
\setbeamercolor{caption name}{fg = rptu1}

% - Itemize/Enumerate (both) item icons -> gradient
\setbeamercolor{item}{fg = rptu1}
\setbeamercolor{subitem}{fg = rptu1!60}
\setbeamercolor{subsubitem}{fg = rptu1!40}

\mode
<all>




