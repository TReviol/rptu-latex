%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%                     Color Settings                     %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% https://www.cpt.univ-mrs.fr/~masson/latex/Beamer-appearance-cheat-sheet.pdf

% Global Definitions including color palettes
\setbeamercolor{normal text}{fg = rptuschwarz}
\setbeamercolor{structure}{fg=rptu1}

% Title page, part, section, subsection
\setbeamercolor{title}{fg = rptuweiss}
\setbeamercolor{title page header}{fg = rptuweiss}
\setbeamercolor{section title}{fg=rptuweiss}
\setbeamercolor{author}{fg=rptuweiss}
\setbeamercolor{date}{fg=rptuweiss}
\setbeamercolor{institute}{fg = rptuweiss}
\setbeamercolor{section in head/foot}{fg = white!20!rptu1} % e.g. in navigation bar

% Table of Contents and Bibliography
\setbeamercolor{section in toc}{fg = rptu1}
\setbeamercolor{section in toc shaded}{fg = rptu1} 

% Structure of a frame
\setbeamercolor{footline}{fg=rptuschwarz}

% Elements of a frame
\setbeamercolor{frametitle}{fg = rptu2}
\setbeamercolor{framesubtitle}{fg = rptu2}

% - Itemize/Enumerate (both) item icons
\setbeamercolor{item}{fg = rptu1}
\setbeamercolor{subitem}{fg = rptu1!60}
\setbeamercolor{subsubitem}{fg = rptu1!60}

% - Captions
\setbeamercolor{caption}{fg = rptu1}
\setbeamercolor{caption name}{fg = rptu1}

% - Standard block
\setbeamercolor{block title}{fg = rptuweiss, bg = rptu1}
\setbeamercolor{block body}{bg = white!80!rptu2}

% - Alert block
\setbeamercolor{block title alerted}{fg = rptuweiss, bg = rpturot}
\setbeamercolor{block body alerted}{bg = white!80!rptuorange}

% - Example block
\setbeamercolor{block title example}{fg = rptuweiss, bg = rptudunkelgruen}
\setbeamercolor{block body example}{bg = white!80!rptuhellgruen}

% - Footnotes
\setbeamercolor{footnote}{fg=white!20!rptu1} 
\setbeamercolor{footnote mark}{fg=white!20!rptu1}

\mode
<all>